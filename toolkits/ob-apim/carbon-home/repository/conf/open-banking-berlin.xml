<Server xmlns="http://wso2.org/projects/carbon/open-banking-berlin.xml">
    <Gateway>
        <Cache>
            <IdempotencyValidationCache>
                <CacheAccessExpiry>3600</CacheAccessExpiry>
                <CacheModifiedExpiry>3600</CacheModifiedExpiry>
            </IdempotencyValidationCache>
        </Cache>
    </Gateway>
    <ConsentManagement>

        <!-- Enable frequency per day throttling for eligible API GET calls -->
        <!--Maximum value is 4 unless agreed bilaterally between TPP and ASPSP-->
        <FrequencyPerDay>
            <Enable>true</Enable>
            <Frequency>4</Frequency>
        </FrequencyPerDay>
    </ConsentManagement>
</Server>
